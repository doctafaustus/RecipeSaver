<!DOCTYPE html>
<html>
<head>
	<title>Recipe Saver</title>
	<link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
	<h1>Recipe Saver</h1>
	<nav>
		<a href="/home">Home</a> |
		<a href="/login/twitter">Twitter Login</a> |
		<a href="/login/facebook">Facebook Login</a> |
		<a href="/login/google">Google Login</a> |
		<a href="/checklogin">Check log in</a> |
		<a href="/logout">Logout</a> |
		<a href="/register">Register</a> |
		<a href="/account">Account</a> |
		<a href="/recipes">My Recipes</a>
		<a href="/testuser">Test User</a>
	</nav>
	<%= regMessage %>

	<br>
	<br>
	<form>
		<input type="text" id="email" placeholder="email">
		<input type="text" id="password" placeholder="password">
		<input type="submit"> 
	</form>

	
	<script src="js/jquery.min.js"></script>
	<script>
		$('form').submit(function(e) {
			e.preventDefault();
			$.ajax({
				type: 'POST',
				url: '/local-login',
	 	 		contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
	 	 		data: {email: $('#email').val(), password: $('#password').val()},
	  		success: function(data) {
	  			console.log('YES!');
	  		}
			});
		});
	</script>


</body>
</html>