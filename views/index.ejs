<!DOCTYPE html>
<html ng-app="passport">
<head>
	<title></title>
	<script src="js/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
	<link href='https://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
	<h1>Welcome to PassportJS</h1>
	<nav>
		<a href="#home">Home</a> |
		<a href="/login/twitter">Twitter Login</a> |
		<a href="/login/facebook">Facebook Login</a> |
		<a href="/login/google">Google Login</a> |
		<a href="/checklogin">Check log in</a> |
		<a href="/logout">Logout</a> |
		<a href="#registration">Register</a> |
		<a href="/account">Account</a> |
		<a href="/recipes">My Recipes</a>
		<a href="/testuser">Test User</a>
	</nav>
	<%= regMessage %>

	<br>
	<br>
	<form>
		<input type="text">
		<input type="submit"> 
	</form>

	<script>
		$('form').submit(function(e) {
			e.preventDefault();
			$.ajax({
				type: 'POST',
				url: '/test-recipe',
	 	 		contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
	 	 		data: {recipe: $('form input').val()},
	  		success: function(data) {
	  			console.log('YES!');
	  		}
			});
		});
	</script>

</body>
</html>